@model ListRoomsViewModel

<div class="row offset-1">
    @foreach (var room in this.Model.Rooms)
    {
        <div class="card media border-info col-md-4 mb-4 mr-4" style="width: 18rem;">
            <img class="card-img-top" src="@room.ImageUrl" alt="@room.Name @room.CategoryName" width="100" height="200">
            <div class="card-body">
                <h3 class="card-title">@room.Name</h3>
                <p class="card-text">Category: @room.CategoryName</p>
                <p class="card-text">Location: @room.LocationName</p>
                <p class="card-text">
                    @if (room.IsFree == true)
                    {
                        <span class="h4 text-success">Free</span>
                    }
                    else
                    {
                        <span class="h4 text-danger">Occupied</span>
                    }
                </p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item"><span class="font-weight-bold">Price: </span>$@room.Price</li>
                <li class="list-group-item"><span class="font-weight-bold">Owner: </span>@room.UserUserName</li>
            </ul>
            <div class="card-body">
                <a asp-action="SingleRoom" asp-route-roomId="@room.Id" class="btn btn-success viewBtn">View</a>
            </div>
        </div>
    }
</div>