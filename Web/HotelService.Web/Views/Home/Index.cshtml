@using HotelService.Common
@model IndexViewModel
@{
    this.ViewData["Title"] = "Home Page";
}

@{
    var oneFreeRoom = "FREE ROOM IN";
    var manyFreeRooms = "FREE ROOMS IN";
    var hotel = "HOTEL";
    var bungalow = "BUNGALOW";
}

@section Background{
    <style type="text/css">
        body {
            background-image: url('https://pateshestvia.net/wp-content/uploads/2018/11/DSC_0094-2.jpg');
            margin: 0;
            background-size: cover;
            background-repeat: repeat;
        }
    </style>
}

<div class="text-center mt-5">
    <h1 class="display-1 text-white fw-bold">Welcome to <span class="text-success">'@GlobalConstants.SecondarySystemName'!</span></h1>
    @if (Model.FreeRoomsCountInHotel == 1)
    {
        <h1 class="display-2 text-white fw-bold mt-5">@Model.FreeRoomsCountInHotel @oneFreeRoom @hotel</h1>
    }
    else
    {
        <h1 class="display-2 text-white fw-bold mt-5">@Model.FreeRoomsCountInHotel @manyFreeRooms @hotel</h1>
    }
    <h1 class="text-white">&</h1>
    @if (Model.FreeRoomsCountInBungalow == 1)
    {
        <h1 class="display-2 text-white fw-bold">@Model.FreeRoomsCountInBungalow @oneFreeRoom @bungalow</h1>
    }
    else
    {
        <h1 class="display-2 text-white fw-bold">@Model.FreeRoomsCountInBungalow @manyFreeRooms @bungalow</h1>
    }
</div>
